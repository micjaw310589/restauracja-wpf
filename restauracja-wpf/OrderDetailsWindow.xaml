<Window x:Class="restauracja_wpf.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restauracja_wpf"
        mc:Ignorable="d"
        Title="Szczegóły zamówienia" Height="500" Width="400" ResizeMode="NoResize">
    <Grid>
        <StackPanel>
            <ListBox Name="OrderListBox" Margin="10" Height="360"/>
            <Button Name="btnTakeawayOrder" Content="Zatwierdź zamówienie" Margin="10" Height="30" Click="btnTakeawayOrder_Click"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnAcceptOrder_Kopiuj" Margin="10" Height="30" Content="Accept" Click="btnAcceptOrder_Click"/>
                <Button x:Name="btnRejectOrder" Margin="10" Height="30" Content="Reject" Click="btnRejectOrder_Click"/>
                <Button x:Name="btnCancelOrder" Margin="10" Height="30" Content="Cancel" Click="btnCancelOrder_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
