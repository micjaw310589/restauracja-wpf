<Window x:Class="restauracja_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:restauracja_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="600">
    <Grid>
        <TabControl>
            <TabItem x:Name="tabMain" Header="Main Page">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem x:Name="tabUserManagement" Header="User Management" Height="22" Margin="-2,0,-2,0" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid/>
                    <GroupBox x:Name="grpUserCreate" Header="Create User">
                        <StackPanel>
                            <Label Content="Firstname:"/>
                            <TextBox x:Name="txtFirstname" TextWrapping="Wrap" Width="120" MaxLength="20" HorizontalAlignment="Left"/>
                            <Label Content="Lastname:"/>
                            <TextBox x:Name="txtLastname" TextWrapping="Wrap" Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label Content="Login:"/>
                            <TextBox x:Name="txtLogin" TextWrapping="Wrap" Width="120" HorizontalAlignment="Left"/>
                            <Label Content="Password:"/>
                            <PasswordBox x:Name="txtPassword"  Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label Content="Confirm Password:"/>
                            <PasswordBox x:Name="txtConfirmPassword" Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label Content="Role:"/>
                            <ComboBox x:Name="cmbRole" Width="120" HorizontalAlignment="Left" ItemsSource="{Binding}"/>
                            <Label Content="Restaurant:"/>
                            <ComboBox x:Name="cmbRestaurant" Width="120" HorizontalAlignment="Left" ItemsSource="{Binding}"/>
                            <Label></Label>
                            <Button x:Name="btnAddUser" Content="Add User" Click="btnAddUser_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox x:Name="grpUserUpdateDelete" Grid.Column="1" Header="Modify User">
                        <StackPanel>
                            <Label Content="Search by lastname:"/>
                            <TextBox x:Name="txtSearchUser" TextWrapping="Wrap" Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label></Label>
                            <Button x:Name="btnSearchUser" Content="Search" Click="btnSearchUser_ClickAsync"/>
                            <Label></Label>
                            <ListBox x:Name="lbxUserSearchResults" Height="100" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                            <Label Content="Change password:"/>
                            <PasswordBox x:Name="txtChangePassword"  Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label Content="Confirm change password:"/>
                            <PasswordBox x:Name="txtConfirmChangePassword" Width="120" HorizontalAlignment="Left" MaxLength="30"/>
                            <Label></Label>
                            <Button x:Name="btnChangePassword" Content="Change Password" Click="btnChangePassword_Click"/>
                            <Label></Label>
                            <Button x:Name="btnDeleteUser" Content="Delete User" Click="btnDeleteUser_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
